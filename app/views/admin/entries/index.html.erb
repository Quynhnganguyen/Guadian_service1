<h1>Entries</h1>
<button class= "btn" style = "float: right; margin-bottom: 10px;">
      <%= link_to "Manage User", admin_users_path %>
</button><br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Image</th>
      <th>User</th>
      <th>Time Check In</th>
      <th>Time Check Out</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |e| %>
      <tr>
        <td><%= e.tag %></td>
        <td><%= image_tag e.image.try(:url), width: 100, height: 100 %></td>
        <td><%= e.user.try(:email) %></td>
        <td><%= e.check_in_at %></td>
        <td><%= e.check_out_at %></td>
        <td><%= link_to "Delete", admin_entry_path(e), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>